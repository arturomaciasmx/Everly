h1, h2, h3, h4, h5, h6 { 
  font-family: "Metropolis-Bold"!important; 
} 
p { 
  font-family: "Metropolis-Regular"; 
  font-size: 16px!important; 
  letter-spacing: 1.3px; 
  line-height: 28px;
} 

a, a:link, a:visited { 
  background-color: initial; 
} 

h1 { 
  font-size: 47px!important; 
}

h2 { 
  font-size: 42px!important; 
}

h3 { 
  font-size: 19px!important; 
} 
.container { 
  max-width: 1200px; margin: auto; 
} 

.x-menu li:hover > a {
  color: #b0afce;
}

.cta-button { 
  padding: 13px 50px;
  padding-top: 15px;
  border-radius: 60px;
  color: #FFFFFF!important;
  font-size: 16px;
  display: inline-block;
  background-color: none!important;
  font-family: 'Metropolis-Bold';
  line-height: 1;
}

.cta-button:hover,
#custom-cta a:hover {
  background: #b0afce!important;
}

.headding-text p {
  font-size: 18px!important;
  max-width: 850px!important;
}

.x-menu ul { font-weight: 100; font-size: 12px; font-family: 'Metropolis-Regular'; }
.featured-content--title, .featured-grid--heading { font-size: 40px!important; }
.featured-collection--header-text { margin-bottom: 60px; }
.featured-content--root[data-text-width=large] .featured-content--text { max-width: 790px;
} [data-item=block-link]>:after { padding: 0; border: 0; } [data-item=light-accent-text] {
font-weight: 400; } .article--item { text-align: center; } .article--item--heading a,
.article--item--date { color: #6e6d97; } .article--item .cta-button { background: #6e6d97;
} .featured-blog--heading { color: #6e6d97; } 
.featured-collection--grid { 
  max-width:
  1200px; margin: auto; 
  grid-column-gap: 50px;
  grid-row-gap: 50px;
  width: 100%;
}

.header--fill-for-fixing {
  height: auto;
}

.featured-collection--grid .product--title,
.collection--body--grid .product--title {
  font-family: 'Metropolis-Regular';
  font-size: 14px!important;
}
.featured-label {
  width: 100px;
  height: 100px;
  position: absolute;
  z-index: 999;
  border-radius: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
  top: -20px;
  left: -20px;
  background: rgb(177,181,204);
  background: linear-gradient(324deg, rgba(177,181,204,1) 33%, rgba(187,223,191,1) 79%);
  color: #fff;
  font-family: Metropolis-Bold;
  text-transform: uppercase;
  padding: 10px;
  font-size: 13px;
  line-height: 1.2;
}

.icons-with-text p {
  font-size: 14px!important;
}

.custom-divider {
  padding: 0 20px;
}
.custom-divider img {
  height: 100%;
  width: 100%;
}

.flexbox-gap .product--details {
  gap: 0px;
}
.cart--external--total-items {
  width: 20px;
  height: 20px;
  background: #6e6d99;
  border-radius: 50px;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  top: -10px;
  left: -40px;
  padding: 0!important;
}
.cart--external--icon:not([data-item-count="0"]) .cart--external--total-items {
  display: flex;
}
.cart--external--total-items:before,
.cart--external--total-items:after {
  display: none;
}

{% comment %} 1% for the planet {% endcomment %}
.for-the-planet {
  text-align: center; 
  padding-top: 13px; 
  padding-bottom: 5px; 
  font-weight: bold;  
}
.for-the-planet p {
  font-family: 'Metropolis-Bold'!important; 
  font-size: 13px!important;
  text-transform: uppercase;
}

{% comment %} Product Page {% endcomment %}
.disclosure--toggle { background: none!important; border-color: #dad9ee!important; }
.collapsible-tab--wrapper { border-color: #ddd9ec; } .collapsible-tab--heading { color:
#6e6d99;} .collapsible-tab--toggle .icon--root { color: #ddd9ec; width: 18px; height:
14px; } .product--title { text-transform: uppercase; } 
.product-page--grid {
  grid-template-areas: "featured featured"; 
  grid-gap: 40px!important; 
} 
.product-page--grid .placeholder--root:first-child, 
.product-page--grid .product-media--wrapper:first-child { 
  grid-area: featured;
} 
.collapsible-tab--heading {
  font-size: 16px;
}
.star-container svg { width: 20px; height: 20px; } .yotpo-sr-bottom-line-summary {
align-items: flex-end; } .product-price--original { font-family: 'Metropolis-Regular';
font-size: 17px; } [data-product-block][data-block-type] { margin-top: 25px; } 
.rc-radio {
  text-transform: initial!important; 
  font-family: 'Metropolis-Regular'!important; 
}
.rc-radio__label {
  font-size: 14px;
}
.rc-selling-plans,
.rc-subscription-details {
  font-size: 12px;
}
.rc-selling-plans {
  padding-left: 50px!important;
}
.product-page--heading {
  font-size: 35px!important;
}
.product-page--right-column {
  padding-right: 0;
}

{% comment %} Collection Page {% endcomment %}
.collection--header--root { background: #f2f1f7; } .navigation--root { background:
#f2f1f7; } .navigation--container { margin: 0; } .collection--header--heading h1 { color:
#6e6d97; }

{% comment %} candle. repeat. refill section {% endcomment %}
.title-bg h2 {
  position: relative; 
} 
.title-bg h2:before {
  content: ''; background: url({{- 'title_left_bg.png' | asset_url -}});
  width: 400px;
  height: 100px;
  position: absolute;
  left: -85px;
  top: -20px;
  background-position: center;
  background-size: 430px;
  background-repeat: no-repeat;
}
.title-bg h2:after {
  content: '';
  background: url({{ 'title_right_bg.png' | asset_url }});
  width: 400px;
  height: 100px;
  position: absolute;
  right: -85px;
  top: -20px;
  background-position: center;
  background-size: 430px;
  background-repeat: no-repeat;
 }
.title-bg p {
  font-size: 18px!important;
  max-width: 840px!important;
  margin-top: 30px!important;
}
.title-bg p b {
  border-bottom: 2px solid;
  font-family: "Metropolis-bold";
}
.newsletter--body {
   max-width: 600px;
 } .flexbox-gap .newsletter--inputs {
   width: 500px;
 }
.newsletter--email::placeholder {
   font-weight: 100;
   font-family: 'Metropolis-Regular';

color: #cdcdcd;
 }


.bottom-bar p {
  font-size: 13px!important;
}

{% comment %} Footer {% endcomment %}
.footer--about-text p { font-size: 10px!important; margin-top: 20px; margin-left: 8px;
color: #222; text-transform: capitalize; } .footer--blocks { justify-content: flex-start;
} .footer--block { display: flex; padding: 16px; flex-basis: initial!important; flex:
initial!important; margin-right: 20px; } .footer--block--heading { padding-bottom: 20px;
font-size: 14px; font-family: "Metropolis-regular"; font-weight: 600; color: #6e6c99;
text-transform: uppercase; } .footer--block--body { padding-bottom: 16px; font-size: 14px;
font-family: "Metropolis-regular"; color: #6e6c99; text-transform: uppercase; }
.footer--social-icons svg { height: 30px; width: 30px; } .footer--sub--shopify-link {
font-size: 12px; }
.footer--blocks .footer--block:last-child {
  position: absolute;
  right: 0;
}

[data-section-id][data-container-width="4"]:not([data-container])>:not([data-container]) {
  max-width: 1300px;
}

@media screen and (max-width: 1100px) { 
  .title-bg h2:before { 
    right: 75%; 
    left: auto; 
  }
  .title-bg h2:after { 
    left: 75%; 
    right: auto; 
  } 
} 

@media screen and (max-width: 768px) { 
  h1 { 
    font-size: 45px!important;
  } 
  h2 {
    font-size: 34px!important;
  } 
  .custom-divider .divider {
    background-size: cover!important; 
  } 
  .title-bg h2:before, 
  .title-bg h2:after { 
    display: none; 
  } 
  .custom-cols .row-grid { 
    flex-wrap: wrap!important; 
  } 
  .custom-cols .row-grid
  .__column { 
    width: 100%!important; 
  } 
  .custom-2-columns .container { 
    flex-direction: column!important; 
  } 
  .custom-2-columns .container > div { 
    width: 100%!important; 
    padding: 15px 10px!important; 
  } 
  .flexbox-gap .newsletter--inputs { 
    width: auto; 
  }
  .newsletter--inputs .cta-button { 
    padding: 0 20px!important; 
  } 
  .footer--blocks { 
    justify-content: space-around; 
  } 
}

@media screen and (max-width: 480px) { 
  .mobile-hide {display: none;}
  h1 {font-size: 32px!important;} 
  h2 {font-size: 28px!important;}

  .cta-button:hover, #custom-cta a:hover {
      background: #b0afce!important;
  }

  [data-item=a11y-button]:focus-visible, 
  [data-item=a11y-button]:hover, 
  [data-item=a11y-button]:link, 
  [data-item=a11y-button]:visited, 
  [data-item=button]>:focus-visible, 
  [data-item=button]>:hover, 
  [data-item=button]>:link, 
  [data-item=button]>:visited, 
  input[type=submit]:focus-visible, 
  input[type=submit]:hover, 
  input[type=submit]:link, 
  input[type=submit]:visited {
      color: var(--color--button);
      background: var(--bg-color--button);
  }
  [data-item=button]>:hover, 
  [data-item=inverted-button]>:hover, 
  [data-item=inverted-secondary-button]>:hover, 
  [data-item=secondary-button]>:hover, 
  button:hover, 
  input[type=button]:hover, 
  input[type=reset]:hover, 
  input[type=submit]:hover {
      color: var(--color--button);
      background: var(--bg-color--button);
  }
  .cta-button {
    padding: 13px 30px;
  }

  .home-header .header_image {
    margin-top: 0!important;
  }

  .header--root {
    padding: 20px!important;
  }

  .for-the-planet img { 
    display: block;
    margin: auto!important;
  }
  
  .featured-label {
    left: -10px;
    top: -10px;
  }

  .custom-divider {
    padding: 0!important;
  }

  .custom-2-columns .text {
    margin-bottom: 50px;
  }

  .custom-cols .__column {
    margin-bottom: 50px;
  }

  .footer--blocks .footer--block:last-child {
    position: initial;
  }

  .bottom-bar {
    padding: 20px;
  }
  .bottom-bar p {
    font-size: 13px!important;
  }
  .bottom-bar p img:nth-child(3),
  .bottom-bar p img:nth-child(2) {
    margin-top: 50px!important;
  }

  .product-page--right-column {
    padding-right: 16px;
  }

  .collections--menu {
    padding-left: 15px!important;
    padding-right: 15px!important;
  }

  .custom-grid-container {
    padding: 0 16px;
  }
  .custom-grid-block {
    width: 100%!important;
  }
  .custom-divider .divider.about-firm {
    background-size: 300px!important;
  }

  .collection--container {
    grid-template-columns: 1fr!important;
  }
  #collections--menu-desktop {
    display: none;
  }
  #collections--menu-mobile {
    display: block!important;
    margin-bottom: 30px;
  }
  .collections--menu .menu--section ul {
    display: none;
    line-height: 1.5; 
    font-size: 18px;
  }
  #collections--menu-mobile h3:after {
    content: '';
    position: relative;
    top: 5px;
    right: 15px;
    width: 14px;
    height: 14px;
    border: solid #b0afce;
    border-width: 0 1px 1px 0;
    display: inline-block;
    padding: 3px;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    float: right;
  }
  .collection--body--grid {
    grid-row-gap: 50px;
  }
  {% comment %} fix error on header when close mobile menu {% endcomment %}
  .off-canvas--viewport { 
    overflow: hidden!important; 
  } 
}
