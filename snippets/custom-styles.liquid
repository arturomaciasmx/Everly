.collection--header--root { background: #f2f1f7; } .navigation--root { background:
#f2f1f7; } .navigation--container { margin: 0; } .collection--header--heading h1 { color:
#6e6d97; }

{% comment %} candle. repeat. refill section {% endcomment %}
.title-bg h2 { position: relative; } .title-bg h2:before { content: ''; background: url(
{{- 'title_left_bg.png' | asset_url -}}
); width: 400px; height: 90px; position: absolute; left: -44px; top: -13px;
background-position: center; background-size: contain; background-repeat: no-repeat; }
.title-bg h2:after { content: ''; background: url({{ 'title_right_bg.png' | asset_url }});
