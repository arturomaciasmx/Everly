h1, h2, h3, h4, h5, h6 {
  font-family: "Metropolis-Bold"!important;
}
p {
  font-family: "Metropolis-Regular";
  font-size: 16px!important;
  letter-spacing: 1.3px;
  line-height: 28px;
}
a, a:link, a:visited {
  background-color: initial;
}
h1 {
  font-size: 50px!important;
}
h2 {
  font-size: 40px!important;
}
h3 {
  font-size: 19px!important;
}
.container {
  max-width: 1200px;
  margin: auto;
}
.cta-button {
  padding: 14px 50px;
  border-radius: 60px;
  color: #FFFFFF!important;
  font-size: 16px;
  display: inline-block;
  background-color: none!important;
  font-weight: bold;
}

.featured-content--title,
.featured-grid--heading {
  font-size: 40px!important;
}

.featured-content--root[data-text-width=large] .featured-content--text {
  max-width: 790px;
}
[data-item=block-link]>:after {
  padding: 0;
  border: 0;
}
[data-item=light-accent-text] {
  font-weight: 400;
}
.article--item {
  text-align: center;
}
.article--item--heading a,
.article--item--date {
  color: #6e6d97;
}
.article--item .cta-button {
  background: #6e6d97;
}
.featured-blog--heading {
  color: #6e6d97;
}
.featured-collection--grid {
  max-width: 1200px;
  margin: auto;
}

{% comment %} candle. repeat. refill section {% endcomment %}
.title-bg h2 {
  position: relative;
}
.title-bg h2:before {
  content: '';
  background: url({{ 'title_left_bg.png' | asset_url }});
  width: 400px;
  height: 90px;
  position: absolute;
  left: -44px;
  top: -13px;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
}
.title-bg h2:after {
  content: '';
  background: url({{ 'title_right_bg.png' | asset_url }});
  width: 400px;
  height: 90px;
  position: absolute;
  right: -44px;
  top: -13px;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
}
.newsletter--body {
  max-width: 600px;
}
.flexbox-gap .newsletter--inputs {
  width: 500px;
}
