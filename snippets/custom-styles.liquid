h1, h2, h3, h4, h5, h6 { font-family: "Metropolis-Bold"!important; }
{% comment %} fix error on header when close mobile menu {% endcomment %}
.off-canvas--viewport { overflow: hidden!important; } p { font-family:
"Metropolis-Regular"; font-size: 16px!important; letter-spacing: 1.3px; line-height: 28px;
} a, a:link, a:visited { background-color: initial; } h1 { font-size: 45px!important; } h2
{ font-size: 40px!important; } h3 { font-size: 19px!important; } .container { max-width:
1200px; margin: auto; } .cta-button { padding: 14px 50px; border-radius: 60px; color:
#FFFFFF!important; font-size: 16px; display: inline-block; background-color:
none!important; font-weight: bold; }

.x-menu ul { font-weight: 100; font-size: 12px; font-family: 'Metropolis-Regular'; }
.featured-content--title, .featured-grid--heading { font-size: 40px!important; }
.featured-collection--header-text { margin-bottom: 60px; }
.featured-content--root[data-text-width=large] .featured-content--text { max-width: 790px;
} [data-item=block-link]>:after { padding: 0; border: 0; } [data-item=light-accent-text] {
