  .tabs-info-container div {
    width: 50%;
  }
  .tabs-info-container .tab-info {
    align-items: center;
    position: relative;
    justify-content: flex-end;
    width: 100%;
    display: none;
    padding: 80px ;
  }
  .tabs-info-container .tab-info.active {
    display: flex;
  }
  .tabs-info-container .tab-image {
    position: absolute;
    left: 20%;
  }
  .tabs-info-container .tab-text {
    text-align: center;
    padding: 30px;
    max-width: 500px;
  }
  .tabs-info-container .tab-text a {
    background: #6e6d97;
    padding: 15px 40px;
    margin-top: 30px;
