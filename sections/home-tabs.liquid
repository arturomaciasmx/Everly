<style>
  .home-tabs {
    text-align: center;
    padding-top: 50px;
    background: rgb(242,242,247);
    background: linear-gradient(0deg, rgba(241,242,246,1) 0%, rgba(242,245,245,1) 100%);
  }
  .home-tabs h2 {
    color: #6e6d99;
    margin-bottom: 20px;
  }
  .home-tabs .container > p {
    color: #6e6d99;
  }
  #tabs-container {
    margin-top: 30px;
  }
  #tabs-container .tabs-menu ul {
    display: flex;
    justify-content: space-around;
  }
  #tabs-container .tabs-menu ul li {
    padding: 15px 50px;
    border: 1px solid #666;
    border-radius: 60px;
  }
  /* tabs colors */
  #tabs-container .tabs-menu .spiritual {
    /* background: #6e6d97; */
